<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></small></h4>
      <%= image_tag(product.image.product_view.url, :alt => "Image not found") %>
      <%= product.description%>
    </div>
    <div class="col-xs-4">
      
      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1, id: "product_#{product.name}_quantity" %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary", id: "product_#{product.name}_submit" %>
          </div>
        </div>

      <% end %>
      <!-- if admin show -->
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, id: "#{product.name}_destroy" %>
      <%= link_to 'Edit', edit_product_path(product), id: "#{product.name}_edit" %>
      <!-- end if -->
    </div>
    
  </div>
</div>